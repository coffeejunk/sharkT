{
    "name": "sharkipedia",
    "scripts": {
      "postdeploy": "pg_dump $STAGING_DATABASE_URL | psql $DATABASE_URL && bundle exec rake db:migrate db:gis:setup"
    },
    "env": {
      "SECRET_KEY_BASE": {
        "description": "rails secret",
        "generator": "secret"
      }
    },
    "formation": {
      "web": {
        "quantity": 1
      },
      "worker": {
        "quantity": 1
      }
    },
    "addons": [
      "heroku-postgresql",
      "heroku-redis",
      "papertrail"
    ]
}
