<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
  <tbody>
    <tr>
      <th>Species</th>
      <td id="species-name">
        <% if local_assigns.has_key? :render_links %>
          <%= link_to species.name, species_path(species) %>
        <% elsif local_assigns.has_key? :render_links_new_window %>
          <%= link_to species.name, species_path(species), target: '_blank' %>
        <% else %>
          <%= species.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>Superorder</th>
      <td id="species-superorder"><%= species.species_superorder.name %></td>
    </tr>
    <tr>
      <th>Order</th>
      <td id="species-order"><%= species.species_order.name %></td>
    </tr>
    <tr>
      <th>Subclass</th>
      <td id="species-subclass"><%= species.species_subclass.name %></td>
    </tr>
    <tr>
      <th>Family</th>
      <td id="species-family"><%= species.species_family.name %></td>
    </tr>
    <tr>
      <th>IUCNcode</th>
      <td id="species-iucn-code"><%= species.iucn_code %></td>
    </tr>
  </tbody>
</table>
