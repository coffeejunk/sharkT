<div class="columns">
  <div class="column">
    <h1 class="title">
      <%= @trend.title %>
    </h1>
  </div>

  <div class="column is-one-third">
    <div class="buttons is-pulled-right">
      <% if user_is_admin? %>
        <%= link_to 'Edit', edit_trend_path(@trend), class: 'button is-info is-pulled-right is-light' %>
      <% end %>

      <%= link_to 'Report Error', "mailto:admin@sharktraits.org?subject=Error in Trend #{@trend.id}&body=Hi,\n\nI found an error in the data for this trend: #{trend_url(@trend)}", class: 'button is-danger is-light' %>

      <%= link_to 'Download as CSV', trend_path(@trend, format: 'csv'), class: 'button is-primary is-light' %>
    </div>
  </div>
</div>

<div class="columns">
  <div class="column is-one-third">
    <% if @trend.species %>
      <%= render partial: 'species/detail', locals: { specie: @trend.species, render_links: true } %>
    <% else %>
      <%= render partial: 'species/group_detail', locals: { species_group: @trend.species_group } %>
    <% end %>
    <%= render partial: 'meta', locals: { trend: @trend } %>
  </div>
  <div class="column">
    <% if @trend.figure.attached? %>
      <div class="tabs is-small">
        <ul>
          <li class="is-active" data-option="0"><a>Plot</a></li>
          <li data-option="1"><a>Figure</a></li>
          <li data-option="2"><a>Both</a></li>
        </ul>
      </div>
    <% end %>
    <div class="tab-container">
      <div class="tab-item is-active" data-item="0">
        <%= react_component("TrendChart", { observations: @trend.observations_data, unit: @trend.standard.name }) %>
      </div>

      <% if @trend.figure.attached? %>
        <div class="tab-item" data-item="1">
          <%= image_tag @trend.figure %>
        </div>

        <div class="tab-item" data-item="2">
          <%= react_component("TrendChart", { observations: @trend.observations_data }) %>

          <%= image_tag @trend.figure %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="columns">
  <div class="column">
    <% if @trend.location.lat && @trend.location.lon %>
      <%= react_component("MarineRegionsMap", { latitude: @trend.location.lat, longitude: @trend.location.lon, meow: @meow_regions, ppow: @ppow_regions, fao_areas: @trend&.fao_areas&.map(&:f_code) } ) %>
    <% end %>
  </div>
</div>

<div class="columns">
  <div class="column">
    <%= render partial: 'raw_data', locals: { observations: @trend.trend_observations } %>
  </div>
  <div class="column">
    <%= render partial: 'location', locals: { location: @trend.location, oceans: @trend.oceans } %>
  </div>
</div>

<div class="columns">
  <div class="column">
    <%= render partial: 'references/detail', locals: { reference: @trend.reference, render_links: true } %>
  </div>
  <div class="column">
    <%= render partial: 'figure_meta', locals: { trend: @trend } %>
  </div>
</div>
