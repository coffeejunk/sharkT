<h1 class="title">Trends</h1>

<div class="columns">
  <div class="column">
    <table class="table">
      <thead>
        <tr>
          <th>Species</th>
          <th>Resource</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @trends.each do |trend| %>
          <tr>
            <td><%= link_to trend.species.name, species_path(trend.species) %></td>
            <td><%= link_to trend.resource.name, resource_path(trend.resource) %></td>
            <td><%= link_to 'Show', trend_path(trend) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="column">
    <% if user_is_admin? %>
      <%= link_to 'Upload new Trend', new_trend_path, class: 'button is-primary is-pulled-right' %>
    <% end %>
  </div>
</div>

